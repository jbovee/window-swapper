{
	"manifest_version": 2,
	"name": "Window Swapper",
	"description": "An extension to swap the position of two open windows in Chrome",
	"version": "0.2",

	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Window Swapper",
		"default_popup": "swap.html"
	},
	"permissions": [
		"tabs",
		"system.display"
	]
}