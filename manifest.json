{
	"manifest_version": 2,
	"name": "Window Swapper",
	"description": "An extension to swap the position of two open windows in Chrome",
	"version": "0.3",

	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Window Swapper",
		"default_popup": "swap.html"
	},
	"commands": {
		"basic-swap": {
			"suggested_key": {
				"default": "Alt+S"
			},
			"description": "Swap with only two windows open"
		}
	},
	"permissions": [
		"tabs",
		"system.display"
	]
}